{
  "name": "scratch-components",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-loader": "^8.0.6",
    "commitizen": "^4.0.3",
    "concurrently": "^5.0.2",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "gh-pages": "^2.2.0",
    "jest": "^25.1.0",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.24.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "precommit": "git add .",
    "commit": "git-cz",
    "deploy": "gh-pages -d build",
    "push": "git push --set-upstream origin master",
    "test": "jest .test.js --collect-coverage",
    "dev:conditional_loop:pug-w": "pug ./src/components/conditional_loop/dev/index.pug -o ./src/components/conditional_loop/build/ --watch --pretty",
    "dev:conditional_loop:sass-w": "sass ./src/components/conditional_loop/conditional_loop.sass ./src/components/conditional_loop/build/style.css --watch --no-source-map",
    "dev:conditional_loop:webpack-w": "webpack --mode=development --config ./src/components/conditional_loop/dev/webpack.config.js -w",
    "dev:conditional_loop": "concurrently \"yarn dev:conditional_loop:pug-w\" \"yarn dev:conditional_loop:sass-w\" \"yarn dev:conditional_loop:webpack-w\"",
    "dev:sample:pug-w": "pug ./sample/index.pug -o ./build --watch --pretty",
    "dev:sample:sass-w": "sass ./sample/index.sass ./build/style.css --watch --no-source-map",
    "dev:sample:webpack-w": "webpack --mode=development --config ./sample/webpack.config.js -w",
    "dev:sample": "concurrently \"yarn dev:sample:pug-w\" \"yarn dev:sample:sass-w\" \"yarn dev:sample:webpack-w\""
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}
